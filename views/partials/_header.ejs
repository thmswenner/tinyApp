<html>
<head>

</head>

  <body>
    <a href="/urls"><h1>TinyApp</h1></a>
    <a href="/urls/new"><p>Create a New TinyURL</p></a>

    <% if (email) { %>


      <form class="form-inline" action="/logout" method="POST">
        <div class="form-group mb-2">
          <p><%= email %><p>
          <button type="submit" class="btn btn-primary" style="margin-left: 10px">logout</button>
        </div>
      </form>



    <% } else { %>



      <form style="display: inline-block;" class="form-inline" action="/urls/register" method="GET">
        <button type="submit" class="btn btn-primary">Register</button>
      </form>

      <form style="display: inline-block;" class="form-inline" action="/urls/login" method="GET">
        <button type="submit" class="btn btn-primary">Login</button>
      </form>



    <% } %>


  </body>
</html>