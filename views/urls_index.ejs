<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <title>TinyApp</title>

</head>

<body style="font-size:20px; padding:50px;">
  <% include partials/_header %>

  <h3>My URLs</h3>

    <ul>
      <% for (var element in urls) { %>
      <li><strong><%= element %>:</strong> <%= urls[element]%></li>

      <form style="display: inline-block;" method="GET" action='/urls/<%= element %>/'>
        <button type="submit" class="btn btn-primary">Edit</button>
      </form>

      <form style="display: inline-block;" method="POST" action='/urls/<%= element %>/delete'>
        <button type="submit" class="btn btn-primary">Delete</button>
      </form>

      <% } %>
    </ul>

</body>
</html>